{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "jest/globals": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 8
    },
    "plugins": [
        "import",
        "jest"
    ],
    "rules": {
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-fallthrough": "off",
        "arrow-parens": "off",
        "consistent-return": "off",
        "func-names": "off",
        "no-underscore-dangle": "off",
        "arrow-body-style": "off"
    }
}
